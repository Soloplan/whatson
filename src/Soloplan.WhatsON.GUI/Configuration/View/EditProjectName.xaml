<UserControl x:Class="Soloplan.WhatsON.GUI.Configuration.View.EditProjectName"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:configuration="clr-namespace:Soloplan.WhatsON.GUI.Configuration"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="{DynamicResource MaterialDesignPaper}"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             mc:Ignorable="d">
  <UserControl.CommandBindings>
    <CommandBinding CanExecute="CanCloseDialog" Command="materialDesign:DialogHost.CloseDialogCommand" />
  </UserControl.CommandBindings>
  <StackPanel MinWidth="300" Margin="8">
    <TextBox Margin="0,8,0,0"
             HorizontalAlignment="Stretch"
             materialDesign:HintAssist.Hint="Project name"
             Style="{StaticResource MaterialDesignFloatingHintTextBox}">
      <TextBox.Text>
        <Binding Path="Name" UpdateSourceTrigger="PropertyChanged">
          <Binding.ValidationRules>
            <configuration:NotEmptyValidationRule />
          </Binding.ValidationRules>
        </Binding>
      </TextBox.Text>
    </TextBox>

    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
      <Button Margin="0,8,8,0"
              Click="OkButtonClick"
              IsDefault="True"
              Command="materialDesign:DialogHost.CloseDialogCommand">
        <Button.CommandParameter>
          <system:Boolean>True</system:Boolean>
        </Button.CommandParameter>
        Ok
      </Button>
      <Button Width="80"
              Margin="0,8,8,0"
              Click="CancelButtonClick"
              IsCancel="True"
              Command="materialDesign:DialogHost.CloseDialogCommand">
        <Button.CommandParameter>
          <system:Boolean>False</system:Boolean>
        </Button.CommandParameter>
        Cancel
      </Button>
    </StackPanel>
  </StackPanel>
</UserControl>
