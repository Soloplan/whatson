<Page x:Class="Soloplan.WhatsON.GUI.Configuration.Wizard.ConnectionWizardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Soloplan.WhatsON.GUI.Configuration.Wizard"
      mc:Ignorable="d" 
      d:DesignHeight="640.997" d:DesignWidth="619.132"
      Title="ConnectionWizardPage"
      Background="{DynamicResource MaterialDesignPaper}"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}">

  <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="6">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Orientation="Vertical">
      <ComboBox materialDesign:HintAssist.Hint="Type" Margin="10,0,10,0" Style="{StaticResource MaterialDesignFloatingHintComboBox}" ItemsSource="{Binding AvailableConnectorTypes}" SelectedItem="{Binding SelectedConnectorType}" />
      <ComboBox materialDesign:HintAssist.Hint="Project URL" Margin="10,30,10,0" DockPanel.Dock="Top" Padding="8 4 8 4" IsEditable="True" materialDesign:HintAssist.HintOpacity=".26" ItemsSource="{Binding AvailableServers, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Text="{Binding Path=ProposedServerAddress}" KeyUp="ConnectionAdressKeyUp" Name="AddressComboBox" />
    </StackPanel>
  </StackPanel>
</Page>